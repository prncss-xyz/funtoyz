{
	"extends": "@funtoyz/config/tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2017",
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next.config.mjs"
	],
	"exclude": ["node_modules"],
	"noUncheckedSideEffectImports": false
}
