{
	"name": "funtoyz",
	"homepage": "https://github.com/prncss-xyz/funtoyz",
	"private": true,
	"version": "0.0.0",
	"description": "",
	"scripts": {
		"clean": "rm -rf **/{.turbo,dist,coverage}",
		"clean-all": "rm -rf **/{node_modules,.turbo,dist,coverage}",
		"dev": "turbo run dev",
		"verify": "turbo run verify",
		"update": "pnpm update --latest --recursive",
		"knip": "knip --cache",
		"check:tests": "vitest run --coverage",
		"dev:tests": "vitest",
		"lint:style": "prettier --check .",
		"sherif": "sherif -r non-existant-packages",
		"lint:eslint": "eslint --max-warnings 0 --no-warn-ignored",
		"lint": "turbo run lint",
		"fix:prettier": "prettier --write .",
		"fix:eslint": "eslint --fix --max-warnings 0 --no-warn-ignored",
		"prepare": "husky",
		"commitlint": "commitlint --edit"
	},
	"keywords": [],
	"author": "Juliette Lamarche <juliette.lamarche.xyz@gmail.com> (https://github.com/prncss-xyz/)",
	"license": "MIT",
	"packageManager": "pnpm@10.15.1",
	"type": "module",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@cspell/eslint-plugin": "^9.2.1",
		"@funtoyz/config": "workspace:*",
		"@turbo/gen": "^2.5.6",
		"@types/node": "^24.5.2",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.36.0",
		"husky": "^9.1.7",
		"knip": "^5.63.1",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"sherif": "^1.6.1",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
