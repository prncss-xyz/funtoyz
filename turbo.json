{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**", "out/**"],
			"env": ["BASE_PATH"],
			"dependsOn": ["^build"]
		},
		"check:tests": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		},
		"check:types": {
			"dependsOn": ["build"]
		},
		"check": {
			"dependsOn": ["check:types", "check:tests"]
		},
		"//#lint:style": {},
		"//#lint:eslint": {},
		"lint": {
			"dependsOn": ["//#lint:style", "//#lint:eslint"]
		},
		"pre-commit": {
			"dependsOn": ["check"]
		},
		"verify": {
			"dependsOn": ["lint", "pre-commit"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
