{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"transit": {
			"dependsOn": ["^transit"]
		},
		"check:tests": {
			"outputs": ["coverage"]
		},
		"//#check:knip": {},
		"check:types": {
			"dependsOn": ["transit"]
		},
		"check": {
			"dependsOn": ["build", "//#check:knip", "check:types", "check:tests"]
		},
		"//#fix:lint": {},
		"//#fix:style": {},
		"fix": {
			"dependsOn": ["//#fix:lint", "//#fix:style", "check"]
		},
		"//#build:lint": {},
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
