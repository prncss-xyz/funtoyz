{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"transit": {
			"dependsOn": ["^transit"]
		},
		"build": {
			"outputs": ["dist", "out"],
			"env": ["BASE_PATH"],
			"dependsOn": ["^build"]
		},
		"check:tests": {
			"dependsOn": ["build"],
			"outputs": ["coverage"]
		},
		"check:types": {
			"dependsOn": ["transit", "build"]
		},
		"check": {
			"dependsOn": ["check:types", "check:tests"]
		},
		"//#lint:style": {},
		"//#lint:eslint": {},
		"lint": {
			"dependsOn": ["//#lint:style", "//#lint:eslint"]
		},
		"verify": {
			"dependsOn": ["check", "lint"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
